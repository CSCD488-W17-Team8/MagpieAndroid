<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/BadgeListImg"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@android:drawable/screen_background_light_transparent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/BadgeListBuf"
        android:layout_width="10dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/BadgeListImg"
        android:layout_toEndOf="@+id/BadgeListImg" />

    <TextView
        android:id="@+id/BadgeListTitle"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/BadgeListDistance"
        android:layout_toStartOf="@+id/BadgeListDistance" />

    <TextView
        android:id="@+id/BadgeListDistance"
        android:layout_width="90dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/BadgeListTime"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:layout_below="@+id/BadgeListDistance"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>