<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_window_focused="false"
        android:drawable="@drawable/list-view-grey" />
    <item android:state_checked="false" android:state_window_focused="false"
        android:drawable="@drawable/list-view-grey" />

    <item android:state_checked="true" android:state_pressed="true"
        android:drawable="@drawable/list_view-black" />
    <item android:state_checked="false" android:state_pressed="true"
        android:drawable="@drawable/list_view-black" />

    <item android:state_checked="true" android:state_focused="true"
        android:drawable="@drawable/list-view-green" />
    <item android:state_checked="false" android:state_focused="true"
        android:drawable="@drawable/list-view-green" />

    <item android:state_checked="false" android:drawable="@drawable/list-view-grey" />
    <item android:state_checked="true" android:drawable="@drawable/list-view-green" />
</selector>